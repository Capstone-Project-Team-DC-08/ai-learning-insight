# AI Learning Insight - Backend Environment
# Copy file ini menjadi .env dan sesuaikan nilainya

# DATABASE CONFIGURATION
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://user:pass@host:port/dbname


# SERVER CONFIGURATION
PORT=4000
HOST=localhost

# AUTHENTICATION
# Generate menggunakan: openssl rand -hex 64
# atau: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_here_please_change_this

# ML SERVICE CONFIGURATION
ML_SERVICE_URL=http://localhost:8000

